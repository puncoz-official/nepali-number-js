  "description": "Convert, transliterate, and format numbers between English and Nepali (Devanagari) with full Unicode support. Includes translation utilities for working with localized number systems.",
  "keywords": ["nepali", "devanagari", "hindi", "numbers", "digits", "conversion", "transliteration", "translation", "formatting", "unicode", "localization", "i18n", "l10n", "bilingual", "english-numbers", "nepali-numbers", "hindi-numbers"],
  "license": "MIT",
  "homepage": "https://github.com/puncoz-official/nepali-number-js",
  "author": {
    "name": "Puncoz Nepal",
    "email": "info@puncoz.com",
    "url": "https://puncoz.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/puncoz-official/nepali-number-js.git"
  },
  "bugs": {
    "url": "https://github.com/puncoz-official/nepali-number-js/issues"
  },
  "scripts": {
    "build": "tsdown --clean --dts",
    "dev": "tsdown --watch"
  },
